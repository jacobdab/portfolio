<% include ../partials/headersite%>


<section class="addDevice d-flex justify-content-center align-items-center mt-3 h-100 w-100">
    <div class="container">
    <div class="form-box w-50 mx-auto">
        <form method="post" action="/shop/addProduct">
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-group">
                        <input type="text" class="form-control" name="manufacturer" aria-describedby="emailHelp" placeholder='Firma' required>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="model" aria-describedby="emailHelp" placeholder='Model' required>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="name" aria-describedby="emailHelp" placeholder='Pełna nazwa produktu' required>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="shortDescription" aria-describedby="emailHelp" placeholder='Skrócony opis' required>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="description" aria-describedby="descriptionHelp" placeholder='Opis produktu' rows="6" required></textarea>
                    </div>
                    <div class="form-group">
                        <select name="category" class="form-control">
                            <%category.forEach((categoryE)=>{%>
                                <option required value="<%=categoryE.category%>"><%=categoryE.category%></option>
                                <%})%>
                        </select>
                    </div>
                    <div class="form-group">
                        <select name="subCategory" class="form-control">
                            <%subCategory.forEach((subCategoryE)=>{%>
                            <option value="<%=subCategoryE.subCategory%>"><%=subCategoryE.subCategory%></option>
                            <%})%>
                        </select>
                    </div>

                    <div class="form-group">
                        <input type="url" class="form-control" name="imageHR" aria-describedby="imageHR" placeholder='Ścieżka do obrazka' required>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="quantity" aria-describedby="quantityHelp" placeholder='Ilość' required>
                    </div>
                    <div class="form-group">
                        <input type="number" class="form-control" name="price" aria-describedby="priceHelp" placeholder='Cena' min="1.0" step="1.0" required>
                    </div>

                    <button type="submit" class="btn btn-primary">Dodaj produkt</button>
                </div>
            </div>
        </form>
    </div>
    </div>
</section>



