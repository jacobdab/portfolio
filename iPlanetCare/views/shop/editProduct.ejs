<% include ../partials/headersite%>


<section class="addDevice d-flex justify-content-center align-items-center mt-3 h-100 w-100">
    <div class="container">
        <div class="form-box w-50 mx-auto">
            <form method="post" action="/shop/<%=product._id%>/edit?_method=PUT">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <input type="text" class="form-control" name="manufacturer" aria-describedby="emailHelp" value='<%=product.manufacturer%>' required>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="model" aria-describedby="emailHelp" value='<%=product.model%>' required>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="name" aria-describedby="emailHelp" value='<%=product.name%>' required>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="shortDescription" aria-describedby="emailHelp" value='<%=product.shortDescription%>' required>
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" name="description" aria-describedby="descriptionHelp" rows="6" required><%=product.description%></textarea>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="type" aria-describedby="emailHelp" value='<%=product.type%>' required>
                        </div>
                        <div class="form-group">
                            <input type="url" class="form-control" name="imageHR" aria-describedby="imageHR" value='<%=product.imageHR%>' required>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="quantity" aria-describedby="quantityHelp" value='<%=product.quantity%>' required>
                        </div>
                        <div class="form-group">
                            <input type="number" class="form-control" name="price" aria-describedby="priceHelp" value='<%=product.price%>' min="1.0" step="1.0" required>
                        </div>

                        <button type="submit" class="btn btn-primary">Dodaj produkt</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>



<% include ../partials/footersite%>